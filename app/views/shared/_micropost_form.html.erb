<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("shared._micropost_form.new_post") %>
  </div>
  <%= f.submit t("shared._micropost_form.post_button"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.accept_image %>
  </span>
<% end %>
